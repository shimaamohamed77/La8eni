<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".database.PhoneLoginActivity"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write phone number"
        android:inputType="phone"
        android:background="@drawable/inputs"
        android:padding="7dp"
        android:drawableStart="@drawable/phone"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_number_input"
        android:hint="Write verfication code"
        android:inputType="number"
        android:background="@drawable/inputs"
        android:padding="7dp"
        android:drawableStart="@drawable/password"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/send_verification_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_code_input"
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Send Verification Code"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/send_verification_code_button"
        android:padding="7dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="23sp"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        android:visibility="invisible"
        />


</RelativeLayout>